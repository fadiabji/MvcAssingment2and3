@model mvcDemo.Models.Fever

@{
    ViewData["Title"] = "FeverTest";
}

<h1>FeverTest</h1>

<div>
    <a asp-action="Index">Back to Assignments</a>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="FeverTest">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BodyTemp" class="control-label"></label>
                <input asp-for="BodyTemp" class="form-control"/>
                <span asp-validation-for="BodyTemp" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Take a test" class="btn btn-primary" />
            </div>
            <br />
        </form>
    </div>
</div>

<h2>@Model.Message</h2>
@*<h2 >@ViewBag.Msg</h2>*@

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
